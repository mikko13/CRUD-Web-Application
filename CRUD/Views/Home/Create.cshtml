@model CRUD.Models.Person
@{
    Layout = "~/Views/Shared/_CRUDLayoutPage.cshtml";
}

    <div class="h-full flex pt-12 md:mt-0 items-center justify-center mr-8 ml-8 mb-48 md:mb-0">
        <div class="max-w-xl w-full mx-auto bg-gray-800 rounded-xl overflow-hidden">
            <div class="max-w-sm mx-auto pt-12 pb-8 px-5 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 mb-5 bg-gray-600 rounded-full">
                    <?xml version="1.0" ?>
                    <svg width="32" height="32" style="enable-background:new 0 0 24 24;" version="1.1" viewBox="0 0 24 24" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <g id="info" />
                    <g id="icons">
                    <g id="user">
                    <ellipse cx="12" cy="8" rx="5" ry="6" fill="#483ccc" />
                    <path d="M21.8,19.1c-0.9-1.8-2.6-3.3-4.8-4.2c-0.6-0.2-1.3-0.2-1.8,0.1c-1,0.6-2,0.9-3.2,0.9s-2.2-0.3-3.2-0.9 C8.3,14.8,7.6,14.7,7,15c-2.2,0.9-3.9,2.4-4.8,4.2C1.5,20.5,2.6,22,4.1,22h15.8C21.4,22,22.5,20.5,21.8,19.1z" fill="#483ccc" />
            </g>
        </g>
    </svg>
                </div>

                <h4 class="text-xl text-gray-100 font-semibold mb-5">Create New Data</h4>
                <p class="text-gray-300 font-medium">Fill out the form below to create a new entry.</p>
            </div>
            <form method="post" action="@Url.Action("Create", "Home")">
                <div class="px-6 py-4">
                    <div class="flex flex-col md:flex-row gap-4 mt-4">
                        <div class="relative flex-1">
                            <label class="sr-only" for="FirstName">First Name</label>
                            <input placeholder="First Name"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="FirstName"
                                   name="FirstName"
                                   type="text"
                                   ng-model="newPerson.FirstName" />
                        </div>
                        <div class="relative flex-1">
                            <label class="sr-only" for="LastName">Last Name</label>
                            <input placeholder="Last Name"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="LastName"
                                   name="LastName"
                                   type="text"
                                   ng-model="newPerson.LastName" />
                        </div>
                    </div>
                    <div class="flex flex-col md:flex-row gap-4 mt-4">
                        <div class="relative flex-1">
                            <label class="sr-only" for="Email">Email</label>
                            <input placeholder="Email"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="Email"
                                   name="Email"
                                   type="email"
                                   ng-model="newPerson.Email" />
                        </div>
                        <div class="relative flex-1">
                            <label class="sr-only" for="Age">Age</label>
                            <input placeholder="Age"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="Age"
                                   name="Age"
                                   type="number"
                                   ng-model="newPerson.Age" />
                        </div>
                    </div>
                    <div class="flex flex-col md:flex-row gap-4 mt-4">
                        <div class="relative flex-1">
                            <label class="sr-only" for="PhoneNumber">Phone Number</label>
                            <input placeholder="Phone Number"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="PhoneNumber"
                                   name="PhoneNumber"
                                   type="text"
                                   ng-model="newPerson.PhoneNumber" />
                        </div>
                        <div class="relative flex-1">
                            <label class="sr-only" for="City">City</label>
                            <input placeholder="City"
                                   class="appearance-none relative block w-full px-3 py-3 border border-gray-700 bg-gray-700 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                   required
                                   id="City"
                                   name="City"
                                   type="text"
                                   ng-model="newPerson.City" />
                        </div>
                    </div>
                </div>
                <div class="px-6 py-4">
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Create Data
                    </button>
                    <a href="@Url.Action("Read", "Home")"
                       class="mt-2 mb-2 w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
                        View Data
                    </a>
                </div>
            </form>
        </div>
    </div>